{
	"manifest_version": 3,
	"name": "Fake Tweets Checker",
	"version": "1.0",
	"description": "Check and defeat fake tweets",
	"permissions": [
		"activeTab",
		"storage",
		"identity"
	],
	"host_permissions": [
		"https://twitterrewriterback.onrender.com/*"
	],
	"content_scripts": [
		{
				"matches": [
					"https://x.com/*",
					"https://www.reddit.com/*"
				],
				"js": [
					"content.js"
				],
				"css": [
					"style.css"
				]
			}
	],
	"action": {
		"default_icon": {
			"16": "images/icon16.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"service_worker": "background.js"
	}
}